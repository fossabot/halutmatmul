CAPI=2:
name: "halut:test:fp_adder:0.1"
description: "Test for FP adder"

filesets:
  files_test:
    depend:
      - halut:test:util
      - halut:ip:halut_top
    files:
      - Makefile : { file_type: Makefile}
      - test.py : { file_type: Cocotb }
  sv2v:
    depend:
      - halut:util:sv2v

parameters:
  COCOTB_SIM: # use to dump vcd file
    datatype: bool
    paramtype: vlogdefine
    default: true

targets:
  default: &default_target
    filesets:
      - files_test
    toplevel: fp_adder
    parameters:
      - COCOTB_SIM=true
    default_tool: cocotb
  icarus:
    <<: *default_target
    filesets_append:
      - sv2v
    tools:
      cocotb:
        make_args: SIM=icarus